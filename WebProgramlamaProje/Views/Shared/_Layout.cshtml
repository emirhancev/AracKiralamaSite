<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" type="image/png" href="/img/carIcon.png" />
    <link href="/css/Style.css" type="text/css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/ac0263bc8c.js" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <header>
        <div class="main-bar">

            <nav>
                <input type="checkbox" id="check">
                <label for="check" class="checkbtn">
                    <span></span>
                    <span></span>
                    <span></span>
                </label>

                <div class="logo-header">
                    <a asp-controller="User" asp-action="Index">
                        <img src="/img/logo.png" alt="car" width="85px" height="64px" />
                    </a>
                </div>

                <ul>
                    <li><a asp-controller="User" asp-action="Index">Anasayfa</a></li>
                    <li><a asp-controller="User" asp-action="AboutUs">Hakkımızda</a></li>
                    <li><a asp-controller="User" asp-action="CarList">Araç Listesi</a></li>
                    <li><a asp-controller="User" asp-action="ContUs">İletişim</a></li>
                    <li><a asp-controller="User" asp-action="KayitOl">Üye Ol</a></li>
                    <li class="active"><a id="LoginPencere" href="#" style="color: black">Giriş Yap</a></li>
                </ul>

            </nav>

        </div>
    </header>
    @RenderBody()
    
    <footer>

        <div class="container-fluid footer">
            <div class="row">

                <div class="col-md-4 birinciBolum">

                    <h3 style="color:yellow">Sayfalar</h3>
                    <div><a asp-controller="User" asp-action="Index">Anasayfa</a></div>
                    <div><a asp-controller="User" asp-action="AboutUs">Hakkımızda</a></div>
                    <div><a asp-controller="User" asp-action="CarList">Araç Listesi</a></div>
                    <div><a asp-controller="User" asp-action="ContUs">İletişim</a></div>
                    <div><a asp-controller="User" asp-action="KayitOl">Üye Ol</a></div>

                </div>


                <div class="col-md-4 ikinciBolum">

                    <h3 style="color:yellow">İletişim</h3>
                    <div>Emirhan Çevik</div>
                    <div>C: 0542 532 12 32</div>
                    <div>M: emirhan.cevik1@gmail.com</div>
                    <div>Salih Eşme</div>
                    <div>C: 0512 222 49 52</div>
                    <div>M: salih_Esme123@gmail.com</div><br>

                </div>

                <div class="col-md-4 ucuncuBolum">

                    <br><h3>Sosyal Medya</h3><br>

                    <div class="social">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </div>

                </div>

            </div>
        </div>

        <div class="container-fluid underFooter">

            © 2021 | Sitenin Tüm hakları saklıdır.
        </div>
    </footer>
    <div class="popup">
        <div class="popup-content">

            <div class="loginBaslik">GİRİŞ YAPIN	<i id="close" class="far fa-times-circle"></i></div>

            <div class="loginIcerik">
                <form method="post" asp-controller="User" asp-action="Giris" class="was-validated">

                    <input type="email" class="form-control" placeholder="E-POSTA GİRİNİZ" required="" name="Email" />

                    <input type="password" class="form-control" placeholder="ŞİFRE GİRİNİZ" required="" name="Password" />

                    <button type="submit" class="btn btn-success float-start w-100 mt-3">Giriş Yap <i class="fas fa-sign-in-alt"></i></button>

                </form>


            </div>
        </div>
    </div>


    <script>
        document.getElementById("LoginPencere").addEventListener("click", function () {
            document.querySelector(".popup").style.display = "flex";
        });

        document.getElementById("close").addEventListener("click", function () {
            document.querySelector(".popup").style.display = "none";
        });

    </script>

    <script>
        $(window).on("load", function () {
            $(".loader-container").fadeOut(900);
        });
    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
